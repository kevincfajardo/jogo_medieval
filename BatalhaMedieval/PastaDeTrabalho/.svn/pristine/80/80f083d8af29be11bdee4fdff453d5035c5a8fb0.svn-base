    public void defineCharacter(){
        Player p1;
        Player p2;
        if(btnWarrior.isSelected()){
            p1 = new Player(txtP1Name.getText(), "Guerrreiro", 4, 3, 30);
        } else if (btnBerseker.isSelected()){
            p1 = new Player(txtP1Name.getText(), "Barbaro", 5, 2, 40);
        } else {
            p1 = new Player(txtP1Name.getText(), "Paladino", 3, 4, 25);
        }
        
        if(btnWarriorP2.isSelected()){
            p2 = new Player(txtP1Name.getText(), "Guerrreiro", 4, 3, 30);
        } else if (btnBersekerP2.isSelected()){
            p2 = new Player(txtP1Name.getText(), "Barbaro", 5, 2, 40);
        } else {
            p2 = new Player(txtP1Name.getText(), "Paladino", 3, 4, 25);
        }
        
        switch (cbxWPP1.getSelectedIndex()) {
            case 0:
                p1.setWeaponName("Espada");
                p1.setDamage(8);
                p1.setAttackSpeed(2);
                RpgWeapons sword = new RpgWeapons("Espada", 8, 2);
            case 1:
                RpgWeapons axe = new RpgWeapons("Machado", 12, 4);
            case 2:
                RpgWeapons spear = new RpgWeapons("Lança", 10, 3);
            case 3:
                RpgWeapons pole = new RpgWeapons("Bastão", 6, 1);
        }
        
        switch (cbxWPP2.getSelectedIndex()) {
            case 0:
                RpgWeapons sword = new RpgWeapons("Espada", 8, 2);
                int wpP2 = 0;
            case 1:
                RpgWeapons axe = new RpgWeapons("Machado", 12, 4);
                wpP2 = 1;
            case 2:
                RpgWeapons spear = new RpgWeapons("Lança", 10, 3);
                wpP2 = 2;
            case 3:
                RpgWeapons pole = new RpgWeapons("Bastão", 6, 1);
                wpP2 = 3;
        }
    }
    
